# Telegram Bot Token (required for production)
BOT_TOKEN=your_telegram_bot_token_here

# URL of your deployed mini app (for notification buttons)
MINI_APP_URL=https://t.me/your_bot/wackywap

# Server port
PORT=3001

# Environment (development allows bypassing Telegram auth)
NODE_ENV=development

# Database path (optional, defaults to ./wackywap.db)
DATABASE_URL=./wackywap.db
